html(lang="en")
    head
        meta(charset="utf-8")
        //meta(name="viewport", content="width=device-width, initial-scale=1")
        link(href="css/arranger.css", rel="stylesheet")
    body
        div.navbar
            div.navbar-header
                a(class="navbar-brand", href="#") æ ž

            div.navbar-nav
                ul.nav.navbar-nav
                    li: a(href="#arrange") Arrange
                    li: a(href="#dup") Dup
                    li.dropdown
                        a(href="#",class="dropdown-toggle",data-toggle="dropdown") Clean
                        ul.dropdown-menu
                            li: a(href="#clean_temp") clean temp
                            li: a(href="#clean_recycle") clean recycle
                form#search-form.navbar-form
                    div.form-group
                        input#search-text.form-control(type="text",placeholder="Keyword", autofocus)
                        button#search-button Search
                ul.nav.navbar-nav
                    li.dropdown
                        a(href="#",class="dropdown-toggle",data-toggle="dropdown") About
                        ul.dropdown-menu
                            li: a(href="http://getbootstrap.com/" target="_blank") bootstrap
                            li: a(href="http://developer.chrome.com/extensions/devguide.html",target="_blank") chrome extension

        // Bookmarks trees
        div#main
            div#panels.flex-row
                div#panel-bm-tree.panel
                    div.panel-heading Bookmark folders
                    div.panel-body.container
                        div.bm-tree#bookmarks-tree

                div#lists.flex-column
                    div#panel-bm-list.panel
                        div.panel-heading Bookmarks
                        div.panel-body.container
                            div.bm-list#bookmarks-list

                    div#panel-search-results.panel.hidden
                        div.panel-heading Search result
                        div.panel-body.container
                            div.bm-list#search-results

        script(src="js/util.js")
        script(src="js/arranger.js")


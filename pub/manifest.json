{
  "manifest_version": 2,

  "name": "Shiori",
  "description": "Bookmark arranger",
  "version": "0.1",

  "permissions": [
    "tabs",
    "bookmarks",
    "file:///*"
  ],
  "icons" : {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
  },
  "browser_action": {
    "default_title": "Shiori 0.1",
    "default_icon": {
        "19": "img/icon19.png"
    }
  },
  "options_page": "options.html",
  "background":{
    "scripts": ["js/eventPage.js"],
    "persistent": false
  }
}
